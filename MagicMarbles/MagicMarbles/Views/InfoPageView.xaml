<UserControl x:Class="MagicMarbles.Views.InfoPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MagicMarbles.Views"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource Locator}, Path=Info}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/MagicMarbles;component/Assets/backround.png" Opacity="0.7"/>
        </Grid.Background>
        <TextBlock Margin="25,0,25,0" TextWrapping="Wrap" Text="Click on a single marble which has neighbors the same color to remove 
them. You win, if you can pop all marbles and no ones are left. You lose if there are remaining ones. 

 " HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center" TextAlignment="Center" Foreground="White"/>
        <TextBlock Margin="0,0,0,15" TextWrapping="Wrap" Text="Copyright © 2017 by Christopher Koellner" HorizontalAlignment="Center" VerticalAlignment="Bottom" TextAlignment="Center" Foreground="White"/>
    </Grid>
</UserControl>
